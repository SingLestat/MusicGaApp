<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicGaApp.MainPage">

    <StackLayout BackgroundColor="Black">
        <SearchBar Placeholder="Search" HorizontalTextAlignment="Center" CancelButtonColor="Orange" BackgroundColor="White"/>
        <Label Text= "Popular Streams Happening Now" HorizontalOptions = "Center" FontSize="Large" Padding="30,10,30,0" TextColor="White" FontAttributes="Bold" VerticalTextAlignment="Center"/>
        <Label Text="Recommended live streams for you" HorizontalOptions="Center" TextColor="White" FontSize="Large" Padding="30,0,10,0" FontAttributes="Bold" VerticalTextAlignment="Center"/>
        <Label Text="Acurated list of events based on your tracked artists" TextColor="CadetBlue" Padding="30,0,10,0" HorizontalOptions="Center"/>
        <Button x:Name="mainRegisterbtn" Text="Register" TextColor="White" BackgroundColor="BlueViolet" CornerRadius="10" Clicked="Button_Clicked"/>
        <Button x:Name="Directorybtn" Text="Directory" TextColor="White" BackgroundColor="BlueViolet" CornerRadius="10" Clicked="Directorybtn_Clicked"/>
    </StackLayout>

</ContentPage>
