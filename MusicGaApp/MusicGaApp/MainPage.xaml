<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicGaApp.MainPage">

    <StackLayout BackgroundColor="Black">
        <StackLayout>
            <Frame BorderColor="BlueViolet" BackgroundColor="Black">
                <StackLayout>
                    <Label Text="Ga Music Directory" FontFamily="avatarock.ttf" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold" FontSize="Subtitle" />
                    <Image Source="Stock.jpeg" />
                </StackLayout>
            </Frame>
            <Button FontAttributes="Bold" FontSize="Large" x:Name="ArtistRegisterbtn" Text="Artist Register" TextColor="White" BackgroundColor = "BlueViolet"  CornerRadius="10" Clicked="ArtistButton_Clicked"/>
            <Button FontAttributes="Bold" FontSize="Large" x:Name="VenueRegisterbtn" Text="Venue Register" TextColor="White" BackgroundColor="BlueViolet" CornerRadius="10" Clicked="VenueButton_Clicked"/>
            <Button FontAttributes="Bold" FontSize="Large" x:Name="Directorybtn" Text="Directory" TextColor="White" BackgroundColor="BlueViolet" CornerRadius="10" Clicked="Directorybtn_Clicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
